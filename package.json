  "scripts": {
    "lint": "next lint --dir src --dir test",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --colors",
    "test:ci": "npm run test -- --coverage --coverageReporters=text --coverageReporters=text-summary --coverageReporters=clover",
